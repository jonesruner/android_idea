<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bth_devices_icon"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="20dp"
        android:scaleType="centerCrop"
        android:layout_height="20dp"
        android:src="@drawable/pc"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bth_device_name"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/bth_devices_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="bluetooth name"
        app:layout_constraintBottom_toTopOf="@id/bth_device_state"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_marginTop="5dp"
        android:id="@+id/bth_device_state"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/bth_devices_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="bluetooth name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>